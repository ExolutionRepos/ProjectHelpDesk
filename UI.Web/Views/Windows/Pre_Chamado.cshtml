@model Library.Class.Models.Chamados

@{
    ViewBag.Title = "Chamado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MyBS = UI.Web.Models.ClassBootStrep;


<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">
            <h2 class="m-t-none">Abertura de chamado</h2>
            <div class="tabs-container">
                <div class="tabs-container">
                    <div class="tab-content ">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">



                                <div id="msgColaborador" class="form-group"></div>

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div id="message1">@Html.Raw(MyBS.GetAlertInfo("HelpDesk", "Para acessar seus chamados ou abrir o mesmo é necessário que faça o cadastro", ViewBag.Msg))</div>
                                    </div>
                                </div>


                                <form id="formDocumentos" action="@Url.Action("Create", "Windows")" method="post">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblDescricao">Descrição</label>
                                                @Html.TextBox("Descricao", null, new { @class = "form-control", @id = "txtDescricao" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblObservacao">Observacao</label>
                                                @Html.TextArea("Observacao", null, new { @class = "form-control", @id = "txtObservacao" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblProduto">Produto</label>
     @*                                           @Html.TextBox("Produto", null, new { @class = "form-control", @id = "txtProduto" })*@
                                                @Html.DropDownListFor(model => model.Produto, ViewBag.Produto as SelectList, new { @class = "chosen-select form-control" })
                                                
                                                <br />
                                            </div>
                                        </div>
                          
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblDataGarantia">Data de Garantia</label>
                                                @Html.TextBox("DataGarantia", null, new { @class = "form-control", @id = "txtDataGarantia" , @type = "date"})
                                                <br />
                                            </div>
                                        </div>
                                      
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblDataGarantia">Produto</label>
                                                @Html.DropDownListFor(model => model.TipoChamado, ViewBag.Chamados as SelectList, new { @class = "chosen-select form-control", @id = "combo" })
                                                <br />
                                            </div>
                                        </div>
                                        




                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <input type="submit" id="btnCriar" value="Abrir chamado" class="btn btn-primary" />
                                        </div>
                                        @*<div class="col-md-1">
                                            <p><a href="~/Home/Register" class="btn btn-primary btn-info">Cadastre-se &raquo;</a></p>
                                        </div>*@
                                    </div>
                                </form>
                                <div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
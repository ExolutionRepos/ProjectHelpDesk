<!DOCTYPE html>
@Html.AntiForgeryToken();
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <link href="css/bootstrap.css" rel="stylesheet">
    <link href="css/bootstrap-responsive.css" rel="stylesheet">



    @*<div style="background-color:#893030" width 100%; height:100%;">*@
    @*<div style="background-color:#642EFE" width 100%; height:100%;"> *@

    @*<div style="background-image:url(../../Content/Image/HelpDesk6.jpg)" width:30%; height:30%;">*@

</head>
<body style=" background-image: url(http://localhost/UI.Web/Content/Image/background-site.jpg)">

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container-fluid">

            <!-- Menu hamburger Inicio -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#exemplo-navbar-collapse" aria-expanded="false">

                    <span class="sr-only">Navegacao</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>

                <!-- Título Direita do menu-->
                <a class="navbar-brand" href="#" target="_blank">HelpDesk</a>

            </div>
            <!-- Menu hamburger Fim -->

            <div class="collapse navbar-collapse" id="exemplo-navbar-collapse">

                <!-- Links Inicio -->
                <ul class="nav navbar-nav navbar-left">

                    <!-- Menu dropdown Inicio -->
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Tópicos <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Página Inicial</a> </li>
                            <li><a href="#">Chamados</a> </li>
                            <li class="divider"></li>
                            <li><a href="#">Login</a> </li>
                            <li><a href="#">Sair</a> </li>
                            <li class="divider"></li>
                        </ul>
                    </li>
                    <!-- Menu dropdown Fim -->

                    <li><a href="#">Página Inicial<span class="sr-only">(current)></span></a></li>
                    <li><a href="#">Chamados</a></li>
                    <li><a href="~/Home/Login">Login</a></li>
                    <li><a href="#">Sair</a></li>

                </ul>
                <!-- Links Fim -->
                <!-- Caixa de Pesquisa Inicio -->
                <div class="navbar-right">

                    <!-- Formulario caixa pesquisa Inicio -->
                    <form class="navbar-form" role="search" method="get" action="#">

                        <div class="input-group">

                            <input type="text" class="form-control" placeholder="Digite seu chamado..." name="Filtro" id="Filtro">

                            <!-- Display icone Lupa -->
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>

                        </div>

                    </form>
                    <!-- Formulario caixa pesquisa Fim -->

                </div>
                <!-- Caixa de Pesquisa Fim -->

            </div>
        </div>

    </div>

    <div class="container body-content">
        <div id="main">
            @RenderBody()
        </div>
        <hr />
        <footer style="text-align:end">
            @*<p>&copy; @DateTime.Now.Year</p>*@
            <p>Service Help Desk</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
</div>
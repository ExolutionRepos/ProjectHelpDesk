@model Library.Class.Models.Logins

@{
    ViewBag.Title = "Logar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using MyBS = UI.Web.Models.ClassBootStrep;


<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">
            <h2 class="m-t-none">Login de usuário</h2>
            <div class="tabs-container">
                <div class="tabs-container">
                    <div class="tab-content ">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">

                                <div class="row">
                                    <div class="col-lg-12">
                                        <div id="message1">@Html.Raw(MyBS.GetAlertInfo("HelpDesk", "Para acessar seus chamados ou abrir o mesmo é necessário que faça o cadastro"))</div>
                                    </div>
                                </div>


                                <form id="formDocumentos" action="@Url.Action("Login", "Home")" method="post">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblLogin">Nome de usuário</label>
                                                @Html.TextBox("Login", null, new { @class = "form-control" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lblSenha">Senha</label>
                                                @Html.Password("senha", null, new { @class = "form-control", @id = "txtSenha" })<br />
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <input type="submit" id="btnLogar" value="Logar usuário" class="btn btn-primary" />
                                        </div>
                                        <div class="col-md-1">
                                            <p><a href="~/Home/Register" class="btn btn-primary btn-info">Cadastre-se &raquo;</a></p>
                                        </div>
                                    </div>
                                </form>
                                <div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>





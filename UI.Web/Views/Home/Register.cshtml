@model Library.Class.Models.Usuarios
@{
    /**/

    ViewBag.Title = "Cadastrar";
}

@using MyBS = UI.Web.Models.ClassBootStrep;


<h2>Cadastrar novo usuário</h2>




<div class="row">
    <div class="col-lg-12">
        <div class="wrapper wrapper-content">

            <div class="tabs-container">
                <div class="tabs-container">
                    <div class="tab-content ">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">


                                <div class="row">
                                    <div class="col-lg-12">
                                        <div id="message1">@Html.Raw(MyBS.GetAlertInfo("HelpDesk", "Para acessar seus chamados ou abrir o mesmo é necessário que faça o cadastro"))</div>
                                    </div>
                                </div>

                                <div id="msgColaborador" class="form-group"></div>

                                <form id="formDocumentos" action="@Url.Action("Registrar", "Home")" method="post">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label id="lblNome">Nome de usuário</label>
                                                @Html.TextBox("Nome", null, new { @class = "form-control", @id = "txtNome" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lblEmail">Email</label>
                                                @Html.TextBox("Email", null, new { @class = "form-control", @id = "email" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">Data de Nascimento</label>
                                                @Html.TextBox("DataNascimento", null, new { @class = "form-control", @id = "txtDataNascimento", @type = "date" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label id="lbl">Telefone</label>
                                                @Html.TextBox("Telefone", null, new { @class = "form-control", @id = "txtTelefone" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">Celular</label>
                                                @Html.TextBox("Celular", null, new { @class = "form-control", @id = "txtCelular" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lbl">Sexo</label>

                                                @Html.DropDownListFor(model => model.Sexo, ViewBag.Sexo as SelectList, new { @class = "chosen-select form-control" })
                                                <br />
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label id="lbl">Rua</label>
                                                @Html.TextBox("Rua", null, new { @class = "form-control", @id = "txtRua" })
                                                <br />
                                            </div>
                                            @*</div>

                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">Bairro</label>
                                                @Html.TextBox("Bairro", null, new { @class = "form-control", @id = "txtBairro" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">CEP</label>
                                                @Html.TextBox("CEP", null, new { @class = "form-control", @id = "txtCEP" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <label id="lbl">Cidade</label>
                                                @Html.TextBox("Cidade", null, new { @class = "form-control", @id = "txtCidade" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">Numero</label>
                                                @Html.TextBox("Numero", null, new { @class = "form-control", @id = "txtNumero", @type = "number" })
                                                <br />
                                            </div>
                                            @*</div>
                                                <div class="form-group">*@
                                            <div class="col-md-4">
                                                <label id="lbl">UF</label>
                                                @Html.TextBox("UF", null, new { @class = "form-control", @id = "txtUF" })
                                                <br />
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                <label id="lbl">Complemento</label>
                                                @Html.TextArea("Complemento", null, new { @class = "form-control", @id = "txtComplemento" })
                                                <br />
                                            </div>
                                        </div>


                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-2">
                                            <input type="submit" id="btnLogar" value="Cadastrar Usuário" class="btn btn-primary" />
                                        </div>
                                        <div class="col-md-1">
                                            <p><a href="~/Home/Index" class="btn btn-primary btn-info">Voltar &raquo;</a></p>
                                        </div>
                                    </div>
                                </form>
                                <div>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



